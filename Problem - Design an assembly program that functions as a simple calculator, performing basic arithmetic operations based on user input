LDA 0000H
CPI 01H
JZ ADDITION
CPI 02H
JZ SUBTRACTION
CPI 03H
JZ MULTIPLICATION
CPI 04H
JZ DIVISION
JMP END
ADDITION:LDA 0001H
LXI H, 0002H
MOV B, M
ADD B
STA 0003H
JMP END
SUBTRACTION:LDA 0001H
LXI H, 0002H
MOV B, M
SUB B
STA 0003H
JMP END
MULTIPLICATION:MVI A, 00H
STA 8003H
LXI H, 0001H
MOV B, M
LXI H, 0002H
MOV C, M
MLOOP:ADD B
DCR C
JNZ MLOOP
STA 0003H
JMP END
DIVISION:MVI B, 00H
LDA 0001H
LXI H, 0002H
MOV C, M
DLOOP:INR B
SUB C
JNZ DLOOP
MOV A, B
STA 0003H
HLT
JMP END
END:HLT
